<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CalculatorBMI.Views.CalculatorPage"
             Title="CalculatorPage">

    <FlexLayout Direction="Column" JustifyContent="Center">
        <StackLayout>
            <Label Text="BMI" HorizontalOptions="Center"/>

            <Label Text="Height" HorizontalOptions="Center"/>
            <Entry Text="{Binding Height}" HorizontalOptions="Center"/>
            <Stepper Value="{Binding Height}" Maximum="240" HorizontalOptions="Center"/>

            <Label Text="Weight" HorizontalOptions="Center" />
            <Entry Text="{Binding Weight}" HorizontalOptions="Center"/>
            <Stepper Value="{Binding Weight}"  Maximum="240" HorizontalOptions="Center"/>

            <Label Text="BMI Score" HorizontalOptions="Center"/>
            <Label Text="{Binding BMIScore}" HorizontalOptions="Center" FontAttributes="Bold"/>
            
            <Label Text="BMI Result" HorizontalOptions="Center"/>
            <Label Text="{Binding BMIResult}" HorizontalOptions="Center" FontAttributes="Bold"/>
        </StackLayout>

    </FlexLayout>
</ContentPage>
