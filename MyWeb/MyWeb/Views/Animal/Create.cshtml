@model AnimalViewModel

<div class="row">
    <div class="col-6">
        <div class="card">
            <div class="card-header">
                <h1>Create Animal</h1>
            </div>

            <div class="card-body">
                <form asp-controller="Animal" asp-action="CreateAnimal" method="post">
                    <div class="mb-3">
                        <label class="form-label">Animal Name</label>
                        <input asp-for="Name" type="text" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Animal Age</label>
                        <input asp-for="Age" type="text" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>

                </form>
            </div>

            <div class="card-footer">

            </div>
        </div>
        
    </div>
</div>